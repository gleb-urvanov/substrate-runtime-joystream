{
  "name": "joystream-testing",
  "version": "0.1.0",
  "license": "GPL-3.0-only",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "test": "mocha -r ts-node/register src/tests/constantinople/proposals/*",
    "test-migration": "mocha -r ts-node/register src/tests/rome/* && mocha -r ts-node/register src/tests/constantinople/*",
    "lint": "tslint --project tsconfig.json",
    "prettier": "prettier --write ./src",
    "tap-test": "tap --files=./src/tests/constantinople/membershipCreationTest.ts",
    "tape-test": "tape -r ts-node/register ./src/tests/constantinople/membershipCreationTest.ts",
    "tap-test-two": "tap --files=./src/tests/constantinople/membershipCreationTest.ts --files=./src/tests/constantinople/electingCouncilTest.ts",
    "tap": "tap"
  },
  "dependencies": {
    "@joystream/types": "../joystream-apps/packages/joy-types",
    "@polkadot/api": "^0.96.1",
    "@polkadot/keyring": "^1.7.0-beta.5",
    "@rome/types@npm:@joystream/types": "^0.7.0",
    "@types/bn.js": "^4.11.5",
    "@types/tap": "^14.10.0",
    "bn.js": "^4.11.8",
    "dotenv": "^8.2.0",
    "fs": "^0.0.1-security",
    "tap": "^14.10.7",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "@polkadot/ts": "^0.3.14",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/tape": "^4.13.0",
    "@types/uuid": "^7.0.2",
    "chai": "^4.2.0",
    "mocha": "^7.1.1",
    "prettier": "2.0.2",
    "tape": "^5.0.0",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  }
}
